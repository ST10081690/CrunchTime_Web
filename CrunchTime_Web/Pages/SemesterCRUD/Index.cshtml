@page
@model CrunchTime_Web.Pages.SemesterCRUD.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SemesterModel[0].SemesterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterModel[0].WeeksInSemester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterModel[0].SemesterStartDate)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SemesterModel) {
        <tr>
            @if(@item.UserID == @Model.currentUser)
            {
                    <td>
                        @Html.DisplayFor(modelItem => item.SemesterName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WeeksInSemester)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SemesterStartDate)
                    </td>

                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.SemesterModelID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.SemesterModelID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.SemesterModelID">Delete</a>
                    </td>

            }
            
        </tr>
}
    </tbody>
</table>
