@page
@model CrunchTime_Web.Pages.ModuleCRUD.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.ModuleModel[0].ModuleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleModel[0].ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleModel[0].ModuleCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleModel[0].ClassHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleModel[0].SelfStudyHours)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.ModuleModel[0].Semester)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ModuleModel) {
        <tr>
                @if (item.UserID == @Model.currentUser)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.ModuleCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModuleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModuleCredits)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassHours)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SelfStudyHours)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Semester.SemesterModelID)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ModuleModelID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ModuleModelID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ModuleModelID">Delete</a>
                    </td>


                }
            
        </tr>
}
    </tbody>
</table>
